<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >

            <!-- Button Color -->
            <solid android:color="@color/colorGray"/>

            <!-- Button Borders -->
            <stroke
                android:width="10dp"
                android:color="@color/colorGray"
            />

            <!-- Button Corners -->
            <corners
                android:radius="50"
            />

        </shape>
    </item>

</selector>



