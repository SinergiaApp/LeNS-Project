<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page_gray"
    tools:context=".presentation.Main.View.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="306dp"
                android:layout_height="241dp"
                android:layout_margin="20dp"
                android:src="@drawable/icon_logonels"/>

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/main_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AVLoadingIndicatorView.Large"
                android:visibility="invisible"
                android:layout_margin="20dp"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="@color/colorBlack" />

            <Button
                android:id="@+id/main_login_btn"
                android:layout_width="266dp"
                android:layout_height="63dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/style_main_button"
                android:fontFamily="@font/imprima"
                android:text="@string/BTN_LOGIN"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/main_register_btn"
                android:layout_width="266dp"
                android:layout_height="63dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/style_main_button"
                android:fontFamily="@font/imprima"
                android:text="@string/BTN_REGISTER"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/main_login_google_btn"
                android:layout_width="266dp"
                android:layout_height="63dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/common_google_signin_btn_text_light_normal"
                android:fontFamily="@font/imprima"
                android:text="ENTRAR CON GOOGLE"
                android:textColor="@color/colorBlack"
                android:visibility="gone"/>


        </LinearLayout>



    </ScrollView>


</LinearLayout>