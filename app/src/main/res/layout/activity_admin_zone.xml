<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garybackground"
    tools:context=".presentation.AdminZone.View.AdminZoneActivity">

    <RelativeLayout
        android:id="@+id/main_page_header"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/colorGrayHeader"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/main_page_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

        <TextView
            android:id="@+id/main_page_title"
            android:layout_width="348dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/menu_button"
            android:fontFamily="@font/imprima"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include
            layout="@layout/layout_admin_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>