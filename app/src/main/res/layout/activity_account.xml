<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garybackground"
    tools:context=".presentation.Account.View.AccountActivity">

    <RelativeLayout
        android:id="@+id/main_page_header"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/colorGrayHeader"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/main_page_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

        <TextView
            android:id="@+id/main_page_title"
            android:layout_width="348dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/menu_button"
            android:fontFamily="@font/imprima"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/account_userAvatar"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_icon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/account_logout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:elevation="5dp"
                        android:src="@drawable/logout_black_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/account_nameHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE DE USUARIO"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/account_mailHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CORREO DE USUARIO"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:textStyle="italic" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/userNameExplainText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/account_userName"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Nombre:"
                    android:textColor="@color/colorBlack" />
                <EditText
                    android:id="@+id/account_userName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_login_register"
                    android:ems="10"
                    android:fontFamily="verdana"
                    android:hint="Nombre de Usuario"
                    android:inputType="text"
                    android:paddingStart="50dp" />
                <ImageView
                    android:id="@+id/account_userName_icon"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_alignStart="@+id/account_userName"
                    android:layout_alignTop="@+id/account_userName"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/userLastName1ExplainText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/account_userLastName1"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Apellidos:"
                    android:textColor="@color/colorBlack" />
                <EditText
                    android:id="@+id/account_userLastName1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_login_register"
                    android:ems="10"
                    android:fontFamily="verdana"
                    android:hint="Primer Apellido del Usuario"
                    android:inputType="text"
                    android:paddingStart="50dp" />
                <ImageView
                    android:id="@+id/account_userLastName1_icon"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_alignStart="@+id/account_userLastName1"
                    android:layout_alignTop="@+id/account_userLastName1"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <EditText
                    android:id="@+id/account_userLastName2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_login_register"
                    android:ems="10"
                    android:fontFamily="verdana"
                    android:hint="Segundo Apellido del Usuario"
                    android:inputType="text"
                    android:paddingStart="50dp" />
                <ImageView
                    android:id="@+id/account_userLastName_icon2"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_alignStart="@+id/account_userLastName2"
                    android:layout_alignTop="@+id/account_userLastName2"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/userMailExplainText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/account_userMail"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Correo Electrónico asociado a la Cuenta:"
                    android:textColor="@color/colorBlack" />
                <EditText
                    android:id="@+id/account_userMail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_login_register"
                    android:ems="10"
                    android:fontFamily="verdana"
                    android:hint="Correo de Usuario"
                    android:inputType="text"
                    android:paddingStart="50dp" />
                <ImageView
                    android:id="@+id/account_userMail_icon"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_alignStart="@+id/account_userMail"
                    android:layout_alignTop="@+id/account_userMail"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:elevation="5dp"
                    android:src="@drawable/mail_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/userNIFExplainText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/account_userNIF"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Número de Identificación Fiscal:"
                    android:textColor="@color/colorBlack" />
                <EditText
                    android:id="@+id/account_userNIF"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_login_register"
                    android:ems="10"
                    android:fontFamily="verdana"
                    android:hint="NIF de Usuario"
                    android:inputType="text"
                    android:paddingStart="50dp" />
                <ImageView
                    android:id="@+id/account_userNIF_icon"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_alignStart="@+id/account_userNIF"
                    android:layout_alignTop="@+id/account_userNIF"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:elevation="5dp"
                    android:src="@drawable/nif_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/account_userQR"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:elevation="5dp"
                    android:src="@drawable/qr_icon" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/accountProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AVLoadingIndicatorView.Large"
                    android:visibility="invisible"
                    android:layout_margin="20dp"
                    app:indicatorName="BallPulseIndicator"
                    app:indicatorColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/account_update_btn"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_style"
                        android:fontFamily="Verdana"
                        android:text="ACTUALIZAR"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/account_delete_btn"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_danger_style"
                        android:fontFamily="Verdana"
                        android:text="BORRAR"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorRedDanger" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>