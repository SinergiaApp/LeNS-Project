<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garybackground"
    tools:context=".presentation.Catalog.View.CatalogActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_page_header"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/colorGrayHeader"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

        <TextView
            android:id="@+id/main_page_title"
            android:layout_width="348dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/menu_button"
            android:fontFamily="@font/imprima"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_page_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_page_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/catalog_search"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="62dp"
                            android:background="@drawable/edit_text_login_register"
                            android:ems="10"
                            android:fontFamily="verdana"
                            android:hint="ISBN del Libro"
                            android:inputType="text"
                            android:paddingStart="50dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/catalog_search_icon"
                            android:layout_width="30dp"
                            android:layout_height="41dp"
                            android:layout_alignStart="@+id/catalog_search"
                            android:layout_alignTop="@+id/catalog_search"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="-2dp"
                            app:layout_constraintStart_toStartOf="@+id/catalog_search"
                            app:srcCompat="@drawable/book_icon" />

                        <ImageView
                            android:id="@+id/catalog_camera_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/catalog_search"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="-69dp"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="1dp"
                            android:elevation="20dp"
                            android:layout_toEndOf="@+id/catalog_search"
                            app:srcCompat="@drawable/camera_icon" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/catalog_search_btn"
                            android:layout_width="220dp"
                            android:layout_height="52dp"
                            android:layout_below="@+id/login_user"
                            android:layout_marginTop="19dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/main_button_style"
                            android:fontFamily="Verdana"
                            android:text="BUSCAR LIRBOS"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>


                <ProgressBar
                    android:id="@+id/catalog_progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="100dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/catalog_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>