<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garybackground"
    tools:context=".presentation.Login.View.LoginActivity">

    <ImageView
        android:id="@+id/logo_nels"
        android:layout_width="306dp"
        android:layout_height="241dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logonels"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/UserExplainText"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:text="Usuario:"
        app:layout_constraintBottom_toTopOf="@+id/login_user"
        app:layout_constraintStart_toStartOf="@+id/login_user" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="216dp"
        android:layout_height="35dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/edit_text_login_register"
        android:ems="10"
        android:fontFamily="verdana"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PassExplainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/login_pass"
        app:layout_constraintStart_toStartOf="@+id/login_pass" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="216dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_login_register"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_user" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_marginTop="226dp"
        android:background="@drawable/main_button_style"
        android:fontFamily="Verdana"
        android:text="ENTRAR"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_nels"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/login_pass_forgotten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="¿Has olvidado tu contraseña?"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass" />

    <ProgressBar
        android:id="@+id/login_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/main_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass_forgotten" />

</androidx.constraintlayout.widget.ConstraintLayout>