<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_page_gray"
    tools:context=".presentation.SetArticle.View.SetArticleActivity">

    <include layout="@layout/layout_headder_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:padding="20dp">


            <TextView
                android:id="@+id/ArticleExplainText5"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_ISSN"/>

            <EditText
                android:id="@+id/set_article_ISSN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="textCapSentences"
                android:ems="2"
                android:hint="@string/FRH_ISSN"/>
            <TextView
                android:id="@+id/ArticleExplainText1"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_TITLE"/>

            <EditText
                android:id="@+id/set_article_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="textCapSentences"
                android:ems="2"
                android:hint="@string/FRH_TITLE"/>

            <TextView
                android:id="@+id/ArticleExplainText2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_AUTHORS"/>

            <EditText
                android:id="@+id/set_article_authors"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="textCapSentences"
                android:ems="2"
                android:hint="@string/FRH_AUTHORS"/>

            <TextView
                android:id="@+id/ArticleExplainText3"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_EDITION"/>

            <EditText
                android:id="@+id/set_article_edition"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:ems="2"
                android:hint="@string/FRH_EDITION"/>

            <TextView
                android:id="@+id/ArticleExplainText4"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_SOURCE"/>

            <EditText
                android:id="@+id/set_article_source"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="textCapSentences"
                android:ems="2"
                android:hint="@string/FRH_SOURCE"/>



            <TextView
                android:id="@+id/ArticleExplainText6"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_DESCRIPTION"/>

            <EditText
                android:id="@+id/set_article_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:inputType="textCapSentences"
                android:ems="2"
                android:hint="@string/FRH_DESCRIPTION"/>



            <TextView
                android:id="@+id/ArticleExplainText7"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="@string/FR_CATEGORY"/>

            <RadioGroup
                android:id="@+id/set_article_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/set_article_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AVLoadingIndicatorView.Large"
                    android:visibility="gone"
                    app:indicatorName="BallPulseIndicator"
                    app:indicatorColor="@color/colorBlack" />

                <Button
                    android:id="@+id/set_article_btn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_main_button"
                    android:fontFamily="Verdana"
                    android:text="@string/BTN_UPDATE"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>