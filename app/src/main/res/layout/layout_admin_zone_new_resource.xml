<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/BookExplainText1"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="Título:"/>

    <EditText
        android:id="@+id/admin_zone_bookTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="textCapSentences"
        android:ems="2"
        android:hint="Nombre del Libro"/>

    <TextView
        android:id="@+id/BookExplainText2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="Autores (Separados por ';'):" />

    <EditText
        android:id="@+id/admin_zone_bookAuthor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="textCapSentences"
        android:ems="2"
        android:hint="Autor del Libro"/>

    <TextView
        android:id="@+id/BookExplainText3"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="Edición:" />

    <EditText
        android:id="@+id/admin_zone_bookEdition"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="textCapSentences"
        android:ems="2"
        android:hint="Edición del Libro"/>

    <TextView
        android:id="@+id/BookExplainText4"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="Editorial:" />

    <EditText
        android:id="@+id/admin_zone_bookPublisher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="textCapSentences"
        android:ems="2"
        android:hint="Editorial del Libro"/>

    <TextView
        android:id="@+id/BookExplainText5"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="ISBN:" />

    <EditText
        android:id="@+id/admin_zone_bookISBN"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="textCapSentences"
        android:ems="2"
        android:hint="ISBN del Libro"/>

    <TextView
        android:id="@+id/BookExplainText6"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:textColor="@color/colorBlack"
        android:text="Sinopsis:" />

    <EditText
        android:id="@+id/admin_zone_bookSinosis"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:gravity="left|start"
        android:singleLine="false"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:inputType="textCapSentences|textMultiLine"
        android:ems="2"
        android:textAlignment="inherit"
        android:hint="Sinopsis del Libro"/>

    <Switch
        android:id="@+id/admin_zone_isOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El Recurso está Disponible Online"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/admin_zone_urlOnline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_register"
        android:textColor="@color/colorBlack"
        android:inputType="text"
        android:ems="2"
        android:hint="URL para Visionado Online"/>

    <ProgressBar
        android:id="@+id/admin_zone_newResourceProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/admin_zone_addNewResourceButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_button_style"
        android:fontFamily="Verdana"
        android:text="CREAR RECURSO"
        android:textColor="@color/colorWhite" />

</LinearLayout>