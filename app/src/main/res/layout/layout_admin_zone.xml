<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garybackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/admin_zone_addResourceButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:elevation="21dp"
            android:background="@drawable/menu_buttons_style">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="AÑADIR NUEVO RECURSO" />



        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/admin_zone_addResourceWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/BookExplainText1"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="Título:" />

            <EditText
                android:id="@+id/admin_zone_bookTitle"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:hint="Nombre del Libro" />

            <TextView
                android:id="@+id/BookExplainText2"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="Autor:" />

            <EditText
                android:id="@+id/admin_zone_bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:hint="Autor del Libro" />

            <TextView
                android:id="@+id/BookExplainText3"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="Edición:" />

            <EditText
                android:id="@+id/admin_zone_bookEdition"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:hint="Edición del Libro" />

            <TextView
            android:id="@+id/BookExplainText4"
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:textColor="@color/colorBlack"
            android:text="IBAN:" />

            <EditText
                android:id="@+id/admin_zone_bookIBAN"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:hint="IBAN del Libro" />

            <TextView
                android:id="@+id/BookExplainText5"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="Sinopsis:" />

            <EditText
                android:id="@+id/admin_zone_bookSinosis"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_login_register"
                android:textColor="@color/colorBlack"
                android:hint="Sinopsis del Libro"/>

            <TextView
                android:id="@+id/BookExplainText6"
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:text="Bibliotecas que lo tienen:" />

            <RadioGroup
                android:id="@+id/admin_zone_bookLibraries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp" >

                <RadioButton
                    android:id="@+id/rb_coldfusion"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="ColdFusion"
                    android:paddingRight="15dp"
                    />
                <RadioButton
                    android:id="@+id/rb_flex"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Flex"
                    android:paddingRight="15dp"
                    />
                <RadioButton
                    android:id="@+id/rb_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Flash"
                    android:paddingRight="15dp"
                    />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>